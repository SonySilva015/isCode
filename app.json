{
  "expo": {
    "name": "iscode",
    "slug": "iscode",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "iscode",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "NSUserNotificationsUsageDescription": "Este app precisa de permissão para enviar notificações sobre seus cursos e conquistas."
      },
      "bundleIdentifier": "com.seudominio.iscode"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "WAKE_LOCK",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "WAKE_LOCK"
      ],
      "googleServicesFile": "./google-services.json",
      "useNextNotificationsApi": true,
      "package": "com.seudominio.iscode"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-sqlite",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#3b82f6",
          "defaultChannel": "default",
          "mode": "production",
          "sounds": [
            "./assets/sounds/notification.wav",
            "./assets/sounds/achievement.mp3"
          ],
          "android": {
            "notificationChannelGroups": [
              {
                "id": "general",
                "name": "Geral",
                "description": "Notificações gerais do app"
              },
              {
                "id": "learning",
                "name": "Aprendizado",
                "description": "Notificações sobre cursos e progresso"
              }
            ],
            "notificationChannels": [
              {
                "id": "default",
                "groupId": "general",
                "name": "Notificações Gerais",
                "description": "Notificações importantes do app",
                "importance": "high",
                "enableVibrate": true,
                "vibrationPattern": [
                  0,
                  250,
                  250,
                  250
                ],
                "showBadge": true,
                "lightColor": "#3b82f6",
                "lockscreenVisibility": "public"
              },
              {
                "id": "learning-reminders",
                "groupId": "learning",
                "name": "Lembretes de Estudo",
                "description": "Lembretes para continuar seus estudos",
                "importance": "default",
                "enableVibrate": true,
                "vibrationPattern": [
                  0,
                  250,
                  250,
                  250
                ],
                "showBadge": true
              },
              {
                "id": "achievements",
                "groupId": "learning",
                "name": "Conquistas",
                "description": "Notificações sobre conquistas desbloqueadas",
                "importance": "max",
                "enableVibrate": true,
                "vibrationPattern": [
                  0,
                  500,
                  250,
                  500
                ],
                "showBadge": true,
                "lightColor": "#f59e0b"
              }
            ]
          },
          "ios": {
            "foregroundPresentation": {
              "badge": true,
              "sound": true,
              "banner": true,
              "list": true
            }
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "notification": {
      "icon": "./assets/images/notification-icon.png",
      "color": "#3b82f6",
      "iosDisplayInForeground": true,
      "androidMode": "default",
      "androidCollapsedTitle": "Novas notificações"
    },
    "extra": {
      "eas": {
        "projectId": "seu-project-id"
      }
    }
  }
}
